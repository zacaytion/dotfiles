# Try to use XDG Spec
# https://specifications.freedesktop.org/basedir-spec/basedir-spec-latest.html
export XDG_DATA_HOME=${HOME}/.local/share
export XDG_CONFIG_HOME=${HOME}/.config
export XDG_CACHE_HOME=${HOME}/.cache

export HOMEBREW_CACHE=$XDG_CACHE_HOME/Homebrew
export HOMEBREW_LOGS=$HOMEBREW_CACHE/Logs
export HOMEBREW_CASK_OPTS="--require-sha"
export HOMEBREW_DISPLAY_INSTALL_TIMES=1
export HOMEBREW_NO_ANALYTICS=1
export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_FORCE_BREWED_CURL=1
export HOMEBREW_FORCE_BREWED_GIT=1
export HOMEBREW_FORCE_VENDOR_RUBY=1

# export DBUS_SESSION_BUS_ADDRESS=unix:path=$DBUS_LAUNCHD_SESSION_BUS_SOCKET

export DICPATH=${HOME}/Library/Spelling/en_US-custom

export EMACSDIR=${HOME}/.emacs.d
export DOOMDIR=${XDG_CONFIG_HOME}/doom.d

export ZDOTDIR=${XDG_CONFIG_HOME}/zsh.d
export ZPREZTODIR=${ZDOTDIR}/zprezto

export ASDF_DIR=${XDG_CONFIG_HOME}/asdf/asdf.d
export ASDF_CONFIG_FILE${XDG_CONFIG_HOME}/asdf/asdfrc
export ASDF_DATA_DIR=${XDG_DATA_HOME}/asdf

export TMUXINATOR_CONFIG=${XDG_CONFIG_HOME}/tmuxinator

export STARSHIP_CONFIG=${XDG_CONFIG_HOME}/starship.toml


